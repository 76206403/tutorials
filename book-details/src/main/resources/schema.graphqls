type Query {
    hello: String
    bookById(id: ID): Book
    movieById(id: ID): Movie
    items: [Item]
}

union Item = Movie | Book

type Movie {
    id: ID
    name: String
}

type Book {
    id: ID
    title: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}